{
	"private": true,
	"workspaces": [
		"packages/**"
	],
	"name": "siu-cli",
	"version": "1.0.0",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"author": "buns <zpli_buns@126.com>",
	"license": "MIT",
	"bin": {
		"siu": "./bin/siu.js"
	},
	"files": [
		"bin",
		"dist"
	],
	"scripts": {
		"clean:tmp": "rimraf -g packages/*/tsconfig.tsbuildinfo",
		"clean:dist": "rimraf -g packages/*/dist",
