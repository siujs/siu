		"eslint-plugin-prettier": "3.1.4",
		"lerna": "^3.22.1",
		"prettier": "2.1.2",
		"rimraf": "3.0.2",
		"typescript": "4.0.5"
	},
	"dependencies": {
		"jest": "26.6.3",
		"ts-jest": "26.4.4",
